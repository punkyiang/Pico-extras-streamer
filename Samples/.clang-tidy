Checks: 'readability-identifier-naming,google-readability-casting,modernize-deprecated-headers,modernize-loop-convert,modernize-use-auto,modernize-use-default-member-init,modernize-use-using,readability-else-after-return,readability-redundant-member-init,readability-redundant-string-cstr,clang-analyzer-*'
WarningsAsErrors: ''
#HeaderFilterRegex: '^(?!(.*/(3rdParty|third_party|openxr)/))(?=.*/(framework|samples)/).*\.(h|cpp)$'
AnalyzeTemporaryDtors: false
FormatStyle:     none
CheckOptions:
  - key:             readability-identifier-naming.ClassCase
    value:           CamelCase
  - key:             readability-identifier-naming.StructCase
    value:           CamelCase
  - key:             readability-identifier-naming.FunctionCase
    value:           CamelCase
  - key:             readability-identifier-naming.VariableCase
    value:           lower_case
  - key:             readability-identifier-naming.MemberSuffix
    value:           '_'
  - key:             readability-identifier-naming.ConstexprCase
    value:           CamelCase
  - key:             readability-identifier-naming.ConstexprPrefix
    value:           'k'
  - key:             readability-identifier-naming.EnumCase
    value:           CamelCase
  - key:             readability-identifier-naming.EnumConstantCase
    value:           CamelCase
  - key:             readability-identifier-naming.EnumConstantPrefix
    value:           'k'
  - key:             readability-identifier-naming.NamespaceCase
    value:           CamelCase
  - key:             readability-identifier-naming.MacroDefinitionCase
    value:           UPPER_CASE
